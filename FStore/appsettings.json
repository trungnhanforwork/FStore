{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "NLog": {
    "autoReload": true,
    "internalLogLevel": "Trace",
    "internalLogFile": "./internal_logs/internallog.txt",
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "./logs/${shortdate}_logfile.txt",
        "layout": "${longdate} ${level:uppercase=true} ${message}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  }
}
